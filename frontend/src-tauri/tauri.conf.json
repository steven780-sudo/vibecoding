{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Chronos",
  "version": "1.0.0",
  "identifier": "com.chronos.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["binaries/*"],
    "externalBin": ["binaries/backend"],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "本地文件版本管理工具",
    "longDescription": "Chronos是一款为非技术用户设计的轻量级、本地优先的文件版本管理工具",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13"
    }
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Chronos - 文件时光机",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "shell:default",
            "dialog:default",
            "dialog:allow-open"
          ]
        }
      ]
    }
  }
}
